<%= form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for = "project_describtion">Description</label>
    <div class="controls">
      <%= f.text_area :describtion, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for = "project_bugLists"> Products in <a target="_blank" href="https://bugs.kde.org">Bugzilla</a> (One per line)</label> 
    <div class="controls">
      <%= f.text_area :bugLists, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gitRepositories, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :gitRepositories, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mailLists, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :mailLists, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ircChannels, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :ircChannels, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>
